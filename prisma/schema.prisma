generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Booking {
  id        String   @id @default(cuid())
  name      String
  email     String
  date      DateTime
  timeSlot  String
  status    String   @default("pending") // 'pending', 'accepted', 'declined'
  createdAt DateTime @default(now())
}

model Availability {
  id        String   @id @default(cuid())
  date      DateTime
  timeSlot  String
  isBooked  Boolean  @default(false)
  createdAt DateTime @default(now())
}
